<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
    <context-param>
        <description>base link of website</description>
        <param-name>siteurl</param-name>
        <param-value>http://skyrule.net/forum/</param-value>
    </context-param>
    <context-param>
        <description>base link of image link</description>
        <param-name>imageurl</param-name>
        <param-value>http://images5-focus-opensocial.googleusercontent.com/gadgets/proxy?container=focus&amp;gadget=a&amp;no_expand=1&amp;resize_h=0&amp;rewriteMime=image/*&amp;url=http://truyen.vnsharing.vn/upload/images/</param-value>
    </context-param>
    <filter>
        <filter-name>setParam</filter-name>
        <filter-class>Controller.Filter.setParam</filter-class>
    </filter>
    <filter>
        <filter-name>requestLogin</filter-name>
        <filter-class>Controller.Filter.requestLogin</filter-class>
    </filter>
    <filter>
        <filter-name>requestPermission</filter-name>
        <filter-class>Controller.Filter.requestPermission</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>requestPermission</filter-name>
        <servlet-name>newthread</servlet-name>
        <servlet-name>newpost</servlet-name>
        <servlet-name>newchat</servlet-name>
        <servlet-name>editpost</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>requestLogin</filter-name>
        <servlet-name>newthread</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>setParam</filter-name>
        <servlet-name>index</servlet-name>
        <servlet-name>box</servlet-name>
        <servlet-name>thread</servlet-name>
        <servlet-name>login</servlet-name>
        <servlet-name>newthread</servlet-name>
        <servlet-name>newpost</servlet-name>
        <servlet-name>register</servlet-name>
        <servlet-name>logout</servlet-name>
        <servlet-name>post</servlet-name>
        <servlet-name>member</servlet-name>
        <servlet-name>newchat</servlet-name>
        <servlet-name>converse</servlet-name>
        <servlet-name>editpost</servlet-name>
        <servlet-name>usercp</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>Controller.Servlet.index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>box</servlet-name>
        <servlet-class>Controller.Servlet.box</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>thread</servlet-name>
        <servlet-class>Controller.Servlet.thread</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Controller.Servlet.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newthread</servlet-name>
        <servlet-class>Controller.Servlet.newthread</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newpost</servlet-name>
        <servlet-class>Controller.Servlet.newpost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>Controller.Servlet.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>Controller.Servlet.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>post</servlet-name>
        <servlet-class>Controller.Servlet.post</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>member</servlet-name>
        <servlet-class>Controller.Servlet.member</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newchat</servlet-name>
        <servlet-class>Controller.Servlet.newchat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>converse</servlet-name>
        <servlet-class>Controller.Servlet.converse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editpost</servlet-name>
        <servlet-class>Controller.Servlet.editpost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usercp</servlet-name>
        <servlet-class>Controller.Servlet.usercp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>box</servlet-name>
        <url-pattern>/box/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>thread</servlet-name>
        <url-pattern>/thread/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newthread</servlet-name>
        <url-pattern>/newthread/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newpost</servlet-name>
        <url-pattern>/newpost/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>post</servlet-name>
        <url-pattern>/post/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>member</servlet-name>
        <url-pattern>/member/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newchat</servlet-name>
        <url-pattern>/newchat/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>converse</servlet-name>
        <url-pattern>/converse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editpost</servlet-name>
        <url-pattern>/editpost/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usercp</servlet-name>
        <url-pattern>/usercp/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            3600
        </session-timeout>
    </session-config>
    <ejb-local-ref>
        <ejb-ref-name>UsersFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>Session.UsersFacadeLocal</local>
        <ejb-link>Core-ejb.jar#UsersFacade</ejb-link>
    </ejb-local-ref>
</web-app>
